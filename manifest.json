{
    "name": "自定义右键搜索",
    "description": "你可以将你经常用的搜索引擎接口加入右键菜单中，在网页浏览时选中你想搜索的文字右键就能快速搜索",
    "version": "3.0",
    "manifest_version": 2,
    
    "permissions": [
        "tabs", "http://*/*", "https://*/*","contextMenus","storage","activeTab"
    ],

    "browser_action": {
        "default_icon": "img/icon32.png",
        "default_title":"自定义右键搜索"
    },

    "icons": { 
      "16": "img/icon16.png",
      "48": "img/icon48.png",
      "128": "img/icon128.png" 
    }, 

    "background": {
        "scripts": ["js/background.js"]
    },

    "options_page": "options.html"

}
